<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:paddingHorizontal="12dp"
    android:paddingVertical="4dp">

    <RelativeLayout
        android:id="@+id/parentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_title_question"
        android:minHeight="50dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/ivImage"
            android:maxLines="2"
            android:text="عنوان"
            android:textAppearance="?textAppearanceBody1"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:scaleType="centerInside"
            android:src="@drawable/ic_baseline_add_24" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parentDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentTitle"
        android:layout_marginTop="-8dp"
        android:background="@drawable/bg_description_question"
        android:padding="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:textAppearance="?textAppearanceBody1" />

    </RelativeLayout>

</RelativeLayout>